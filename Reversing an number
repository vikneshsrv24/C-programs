#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n,a,b; // b variable used to store number remainder  of the number
    printf("Enter any number : ");
    scanf("%d",&n);

    while(n!=0){
        b=n%10;
        a=a*10+b;
        n/=10;
    }
    printf("Reversed number=%d",a);
    return 0;
}
